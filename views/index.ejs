<%- include("templates/header") %> 

<div class="container mt-5">
  <div class="row">
    <div class="col text-center">
      <% if (!loggedIn) { %>
        <h1 class="display-4 mb-4">Welcome to BC</h1>
        <p class="lead">See activities of BC.</p>
      <% } %>
    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <% if (loggedIn) { %>
        <h1>Hello, <%= username %></h1>
        <a href="/members" class="btn btn-primary me-3">Members Area</a>
        <a href="/logout" class="btn btn-secondary">Log out</a>
      <% } else { %>
        <a href="/signup" class="btn btn-primary me-3">Sign up</a>
        <a href="/login" class="btn btn-primary me-3">Log in</a>
      <% } %>
    </div>
  </div>
</div>

<%- include("templates/footer") %>
